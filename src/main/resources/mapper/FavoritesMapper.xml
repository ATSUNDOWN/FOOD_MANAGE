<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ysj.mapper.FavoritesMapper">
<!--    List<Food> showFavorites(@Param("username") String username);-->
        <select id="showFavorites" resultType="com.ysj.entity.Food">
            select *
                from food
            where fid in
            (select fid from favorites
                where username =#{username})
        </select>
<!--    void addCollection(@Param("fid") String fid,@Param("username") String username);-->
    <insert id="addCollection">
        insert into favorites(fid,username)
        values (#{fid},#{username})
    </insert>
<!--    void cancelFavorites(@Param("fid") String fid);-->
    <delete id="cancelFavorites">
        delete from favorites
        where fid = #{fid}
    </delete>
</mapper>

