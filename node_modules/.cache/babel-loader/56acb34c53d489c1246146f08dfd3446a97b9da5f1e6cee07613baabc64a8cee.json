{"ast":null,"code":"import request from '@/utils/request';\nexport default {\n  name: \"Wallet\",\n  data() {\n    return {\n      username: '',\n      balance: 0,\n      dialogVisible: false,\n      value: 0\n    };\n  },\n  created() {\n    this.session = JSON.parse(window.sessionStorage.getItem(\"user\"));\n    this.username = this.session.username;\n    this.load();\n  },\n  computed: {\n    countNum() {\n      return Number(this.balance) + Number(this.value);\n    }\n  },\n  methods: {\n    handleClose(done) {\n      this.$confirm('确认关闭？').then(_ => {\n        done();\n      }).catch(_ => {});\n    },\n    load() {\n      request.get(\"/user/selectBalance\", {\n        params: {\n          username: this.username\n        }\n      }).then(res => {\n        this.balance = res.data[0].balance;\n        // console.log(res);\n      });\n    },\n\n    recharge() {\n      request.get(\"/user/recharge\", {\n        params: {\n          balance: this.countNum,\n          username: this.username\n        }\n      }).then(res => {\n        this.dialogVisible = false;\n        if (res.code === \"0\") {\n          this.$message({\n            type: \"success\",\n            message: \"充值成功\"\n          });\n          this.$message({\n            type: \"error\",\n            message: res.msg\n          });\n        }\n        this.load();\n      });\n    }\n  }\n};","map":{"version":3,"mappings":"AAgCA;AACA;EACAA;EACAC;IACA;MACAC;MACAC;MACAC;MACAC;IACA;EACA;EACAC;IACA;IACA;IACA;EACA;EACAC;IACAC;MACA;IACA;EACA;EACAC;IACAC;MACA,uBACAC;QACAC;MACA,GACAC;IACA;IACAC;MACAC;QACAC;UACAd;QACA;MACA;QAEA;QACA;MAEA;IACA;;IACAe;MACAF;QACAC;UACAb;UACAD;QACA;MACA;QACA;QACA;UACA;YACAgB;YACAC;UACA;UAEA;YACAD;YACAC;UACA;QACA;QACA;MACA;IACA;EACA;AACA","names":["name","data","username","balance","dialogVisible","value","created","computed","countNum","methods","handleClose","then","done","catch","load","request","params","recharge","type","message"],"sourceRoot":"src/views","sources":["Wallet.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <div>\r\n      <h1 style=\"text-align: center; margin-top: 30px\">我的钱包</h1>\r\n      <el-card style=\"width: 40%; margin: 50px 30%\">\r\n        <h2>我的余额：{{this.balance}}</h2>\r\n        <el-button icon=\"el-icon-coin\" style=\"margin-left:20px;margin-top:20px\" @click=\"dialogVisible = true\">充值</el-button>\r\n                  <el-dialog\r\n            title=\"充值\"\r\n            :visible.sync=\"dialogVisible\"\r\n            width=\"30%\"\r\n            :before-close=\"handleClose\"\r\n          >\r\n            <el-form  label-width=\"120px\">\r\n              <el-form-item label=\"充值额数\" >\r\n                 <el-input v-model=\"value\" style=\"width: 50%\"></el-input>\r\n              </el-form-item>\r\n            </el-form>\r\n            <span slot=\"footer\" class=\"dialog-footer\">\r\n              <el-button @click=\"dialogVisible = false\">取 消</el-button>\r\n              <el-button type=\"primary\" @click=\"recharge()\"\r\n                >确 定</el-button\r\n              >\r\n            </span>\r\n          </el-dialog>\r\n      </el-card>\r\n\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport request from '@/utils/request';\r\nexport default {\r\n  name: \"Wallet\",\r\n  data(){\r\n    return{\r\n        username:'',\r\n        balance:0,\r\n        dialogVisible:false,\r\n        value:0\r\n    }\r\n  },\r\n  created(){\r\n    this.session = JSON.parse(window.sessionStorage.getItem(\"user\"));\r\n    this.username = this.session.username;\r\n    this.load();\r\n  },\r\n    computed:{\r\n    countNum(){\r\n      return Number(this.balance) + Number(this.value);\r\n    }\r\n  },\r\n  methods:{\r\n     handleClose(done) {\r\n        this.$confirm('确认关闭？')\r\n          .then(_ => {\r\n            done();\r\n          })\r\n          .catch(_ => {});\r\n      },\r\n    load(){\r\n            request.get(\"/user/selectBalance\",{\r\n        params:{\r\n            username:this.username\r\n        }\r\n    }).then((res)=>{\r\n        \r\n        this.balance = res.data[0].balance;\r\n        // console.log(res);\r\n\r\n    })\r\n    },\r\n        recharge(){\r\n      request.get(\"/user/recharge\",{\r\n        params:{\r\n          balance:this.countNum,\r\n          username:this.username\r\n        }\r\n      }).then((res)=>{\r\n        this.dialogVisible = false;\r\n        if (res.code === \"0\") {\r\n          this.$message({\r\n            type: \"success\",\r\n            message: \"充值成功\",\r\n          });\r\n         \r\n          this.$message({\r\n            type: \"error\",\r\n            message: res.msg,\r\n          });\r\n        }\r\n        this.load();\r\n      })\r\n    },\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n</style>\r\n"]},"metadata":{},"sourceType":"module","externalDependencies":[]}