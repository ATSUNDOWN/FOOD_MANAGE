 </div>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column prop=\"foodName\" label=\"食品名\"> </el-table-column>\r\n          <el-table-column prop=\"price\" label=\"价钱\"> </el-table-column>\r\n          <el-table-column prop=\"fcount\" label=\"数量\">\r\n            <template slot-scope=\"scope\">\r\n\t\t\t\t\t\t<div style=\"display: flex;align-items: center;justify-content: \r\n                        center;\">\r\n\t\t\t\t\t\t\t<el-button size=\"small\" @click=\"decrement(scope.$index)\" \r\n                            :disabled=\"scope.row.count <= 1\">-</el-button>\r\n\t\t\t\t\t\t\t<div style=\"width: 50px;\">{{scope.row.fcount}}</div>\r\n\t\t\t\t\t\t\t<el-button size=\"small\" type=\"primary\" \r\n                            @click=\"increment(scope.$index)\">+</el-button>\r\n\t\t\t\t\t\t</div>\r\n\t\t\t\t\t</template>\r\n          </el-table-column>\r\n          <el-table-column fixed=\"right\" label=\"操作\" width=\"100\">\r\n            <template slot-scope=\"scope\">\r\n              <el-popconfirm\r\n                title=\"确认删除吗\"\r\n                @confirm=\"handleDelete(scope.row.id)\"\r\n              >\r\n                <el-button slot=\"reference\" type=\"danger\" size=\"small\"\r\n                  >删除</el-button\r\n                >\r\n              </el-popconfirm>\r\n            </template>\r\n          </el-table-column>\r\n        </el-table>\r\n        <div style=\"margin-top: 20px\">\r\n          <el-button @click=\"toggleSelection()\">取消选择</el-button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport request from \"@/utils/request.js\";\r\nexport default {\r\n  name: \"Cart\",\r\n  data() {\r\n    return {\r\n      tableData: [],\r\n      uid: \"\",\r\n      multipleSelection: [],\r\n    };\r\n  },\r\n  created() {\r\n    this.session = JSON.parse(window.sessionStorage.getItem(\"user\"));\r\n    this.uid = this.session.username;\r\n    // console.log(this.session.username);\r\n    this.showCartInfo();\r\n  },\r\n  methods: {\r\n    showCartInfo() {\r\n      request\r\n        .get(\"/cart/selectCartInfo\", {\r\n          params: {\r\n            uid: this.uid,\r\n          },\r\n        })\r\n        .then((res) => {\r\n          // sessionStorage.setItem(\"food\", JSON.stringify(res.data));\r\n          this.tableData = res.data;\r\n          // console.log(this.foodInfo);\r\n          console.log(this.tableData);\r\n        });\r\n    },\r\n    toggleSelection(rows) {\r\n      if (rows) {\r\n        rows.forEach((row) => {\r\n          this.$refs.multipleTable.toggleRowSelection(row);\r\n        });\r\n      } else {\r\n        this.$refs.multipleTable.clearSelection();\r\n      }\r\n    },\r\n    increment(index) {\r\n      //加\r\n      this.tableData[index].fcount++;\r\n    },\r\n    decrement(index) {\r\n      //减\r\n      this.tableData[index].fcount--;\r\n    },\r\n    handleSelectionChange(val) {\r\n      this.multipleSelection = val;\r\n    },\r\n    handleDelete(id) {\r\n      // console.log(id);\r\n      request.delete(\"/cart/\" + id).then((res) => {\r\n        if (res.code == \"0\") {\r\n          this.$message({\r\n            type: \"success\",\r\n            message: \"删除成功\",\r\n          });\r\n        } else {\r\n          this.$message({\r\n            type: \"error\",\r\n            message: res.msg,\r\n          });\r\n        }\r\n        this.showCartInfo(); //重新加载\r\n      });\r\n    },\r\n  },\r\n  computed: {\r\n    totalPrice() {\r\n      //计算总价\r\n      let total = 0;\r\n      for (let i in this.tableData) {\r\n        total += this.tableData[i].price * this.tableData[i].count;\r\n      }\r\n      return total;\r\n    },\r\n  },\r\n  filters: {\r\n    //过滤器\r\n    // 拼接价格/总价\r\n    showPrice(price) {\r\n      return \"￥\" + price.toFixed(2);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n</style>\r\n"]},"metadata":{},"sourceType":"module","externalDependencies":[]}