{"ast":null,"code":"import request from \"@/utils/request.js\";\nexport default {\n  name: \"CommentManage\",\n  data() {\n    return {\n      search: \"\",\n      currentPage: 1,\n      pageSize: 10,\n      total: 0,\n      tableData: [],\n      dialogVisible: false\n    };\n  },\n  created() {\n    this.load();\n  },\n  methods: {\n    load() {\n      request.get(\"/comment\", {\n        params: {\n          pageNum: this.currentPage,\n          pageSize: this.pageSize,\n          search: this.search\n        }\n      }).then(res => {\n        console.log(res);\n        this.tableData = res.data.records;\n        this.total = res.data.total;\n        // console.log(this.tableData);\n      });\n    },\n\n    handleClose(done) {\n      this.$confirm(\"确认关闭？\").then(_ => {\n        done();\n      }).catch(_ => {});\n    },\n    handleEdit(row) {\n      this.form = JSON.parse(JSON.stringify(row));\n      this.dialogVisible = true;\n    },\n    handleSizeChange(pageSize) {\n      //改变当前每页的个数触发\n      this.pageSize = pageSize;\n      this.load();\n    },\n    handleCurrentChange(pageNum) {\n      //改变当前页码触发\n      this.currentPage = pageNum;\n      this.load();\n    },\n    handleDelete(id) {\n      // console.log(id);\n      request.delete(\"/comment/\" + id).then(res => {\n        if (res.code == \"0\") {\n          this.$message({\n            type: \"success\",\n            message: \"删除成功\"\n          });\n        } else {\n          this.$message({\n            type: \"error\",\n            message: res.msg\n          });\n        }\n        this.load(); //重新加载\n      });\n    }\n  }\n};","map":{"version":3,"mappings":"AAiDA;AAEA;EACAA;EACAC;IACA;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;IACA;EACA;EACAC;IACA;EACA;EACAC;IACAC;MACAC,QACAC;QACAC;UACAC;UACAV;UACAF;QACA;MACA,GACAa;QACAC;QACA;QACA;QACA;MACA;IACA;;IACAC;MACA,uBACAF;QACAG;MACA,GACAC;IACA;IACAC;MACA;MACA;IACA;IACAC;MAAA;MACA;MACA;IACA;IACAC;MAAA;MACA;MACA;IACA;IACAC;MACA;MACAZ;QACA;UACA;YACAa;YACAC;UACA;QACA;UAC